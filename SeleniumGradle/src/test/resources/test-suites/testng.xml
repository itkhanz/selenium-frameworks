<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="OpenCart Test Suite for Cross-browser sequential execution" verbose="1" parallel="false">
    <test name="Firefox Tests" enabled="true">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.itkhanz.tests.LoginPageTest" />
            <class name="com.itkhanz.tests.HomePageTest" />
        </classes>
    </test> <!-- Test -->

    <test name="Chrome Tests" enabled="true">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.itkhanz.tests.LoginPageTest" />
            <class name="com.itkhanz.tests.HomePageTest" />
        </classes>
    </test> <!-- Test -->
</suite> <!-- Suite -->